{
  "name": "react-snap-grid",
  "version": "0.0.1",
  "description": "A React hook library that provides a grid based display element which supports snapping to certain points.",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "start:dev": "webpack-dev-server",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "release": "build && test"
  },
  "jest": {
    "roots": [
      "./dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianmarmour/react-snap-grid.git"
  },
  "keywords": [
    "react",
    "snap-grid",
    "react-snap-grid"
  ],
  "author": "Ian Armour",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/ianmarmour/react-snap-grid/issues"
  },
  "homepage": "https://github.com/ianmarmour/react-snap-grid#readme",
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^25.1.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.10.3"
  }
}
