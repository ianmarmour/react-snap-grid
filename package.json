{
  "name": "react-snap-grid",
  "version": "0.0.1",
  "description": "A React hook library that provides a grid based display element which supports snapping to certain points.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest --verbose --coverage",
    "test:update": "jest --verbose --coverage --updateSnapshot",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html",
    "release": "build && test"
  },
  "jest": {
    "roots": ["./dist/"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianmarmour/react-snap-grid.git"
  },
  "keywords": [
    "react",
    "snap-grid",
    "react-snap-grid"
  ],
  "author": "Ian Armour",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/ianmarmour/react-snap-grid/issues"
  },
  "homepage": "https://github.com/ianmarmour/react-snap-grid#readme",
  "dependencies": {
    "react": "^16.13.0"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "jest": "^25.1.0",
    "react-dom": "^16.13.0",
    "typescript": "^3.8.3"
  }
}
